<div id="topBar"><a href="/hobbyists">Hobbyists</a><p>  </p><a href="/projects">Projects</a></div>

<br>
<h1>Hobbyists</h1>

<% @hobbyists.each do |hobbyist| %>
<p>
<a href="/hobbyists/<%= hobbyist.id %>"><%= hobbyist.name %></a> 
<% if hobbyist.project_count %>
<%= "Number of Hobbies: #{hobbyist.project_count}" %>
<% end %>
<%= link_to "Update #{hobbyist.name}", "/hobbyists/#{ hobbyist.id }/update" %>
<%= link_to "Delete #{hobbyist.name}", "/hobbyists/#{ hobbyist.id }", method: :delete, data: {turbo_method: :delete} %>
</p>
<p><%= hobbyist.created_at %></p>
<% end %>

<%= link_to "New Hobbyist", "/hobbyists/new" %>

<%= link_to "Sort by Number of Hobbies", :order => "num_hobbies"  %>

<p>Search by name - Exact Match</p>
<%= form_with url: '/hobbyists', method: :get, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %> <br>
  <br>
  <%= form.submit "Search" %>
  <% end %>